<%= form_with(model: [ @article, @article.comments.build ]) do |f| %>
<form>
    <div class="form-group">
        <%= f.label :commenter, 'Your name'  %>
        <%= f.text_field :commenter, :class => 'form-control', :placeholder => 'Jean Dupont', :required => true %>
    </div>
    <div class="form-group">
        <%= f.label :body, 'Your message' %>
        <%= f.text_area :body, :class => 'form-control', :rows => '3', :required => true %>
    </div>
    <%= f.submit :class => 'btn btn-primary' %>
</form>
<% end %>
