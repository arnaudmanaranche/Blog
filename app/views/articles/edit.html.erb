<h1>Modifier</h1>

<br />

<%= form_for :article, url: article_path(@article), method: :patch do |f| %>

<% if @article.errors.any? %>
    <div id="error_explanation">
        <p><%= pluralize(@article.errors.count, "erreur") %> trouvées</p>
        <ul>
            <% @article.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
            <% end %>
        </ul>
    </div>
<% end %>

<div class="form-group">
    <%= f.text_field :title, :class => 'form-control', :placeholder => 'Mon titre', :required => true %>
</div>

<div class="form-group">
    <%= f.url_field :url, :class => 'form-control', :placeholder => 'URL de mon image', :required => true %>
</div>

<div class="form-group">
    <%= f.text_area :text, :class => 'form-control', :placeholder => 'Mon contenu', :rows => '3', :required => true %>
</div>

<%= f.submit :class => 'btn btn-primary' %>

<% end %>

<br />
<%= link_to 'Retour à la liste des articles', articles_path %>