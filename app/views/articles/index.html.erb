<% if flash[:notice] %>
<div class="row">
    <div class="col-md-12">
        <%= notice %>
    </div>
</div>
<% end %>
<%= link_to 'New Article', new_article_path %>
<h1>Listing articles</h1>
<%= will_paginate @articles %>
<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Title</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        <% @articles.each do |article| %>
        <tr>
            <th scope="row"><%= article.id %></th>
            <td><%= article.title %></td>
            <td>
                <%= link_to(article_path(article)) do %>
                    <button class="sho btn btn-success">Show</button> 
                <% end %>
                <%= link_to(edit_article_path(article)) do %>
                    <button class="sho btn btn-info">Edit</button> 
                <% end %>
                <%= link_to(article_path(article), method: :delete, data: { confirm: 'Are you sure ?' }) do %>
                    <button class="sho btn btn-danger">Destroy</button> 
                <% end %>
            </td>
        </tr>
         <% end %>
  </tbody>
</table>
