<%= form_with(model: contact, local: true) do |form| %>
  <% if contact.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(contact.errors.count, "error") %> prohibited this contact from being saved:</h2>

      <ul>
      <% contact.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
      <%= form.text_field :name, id: :contact_name, :class => 'form-control', :placeholder => 'Your name', :required => true %>
  </div>

  <div class="form-group">
    <%= form.email_field :email, id: :contact_email, :class => 'form-control', :placeholder => 'Your e-mail', :required => true%>
  </div>
  
  <div class="form-group">
    <%= form.text_area :content, id: :contact_content, :class => 'form-control', :placeholder => 'Your message', :required => true %>
  </div>

  <div class="actions">
    <%= form.submit :class => 'btn btn-primary', :value => 'Send your message' %>
  </div>
<% end %>
